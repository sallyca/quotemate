  = form_for(@page) do |f|
    - if @page.errors.any?
      #error_explanation
      %h2
        = pluralize(@page.errors.count, "error")
        = "prohibited this page from being saved:"

      %ul
        - @page.errors.full_messages.each do |msg|
          %li
            =msg

  .field
    = f.label :title
    %br
    = f.text_field :title
  
  .field
    = f.label :slug
    %br
    = f.text_field :slug
  
  .field
    = f.label :ancestry
    %br
    = f.text_field :ancestry

  .field
    = f.label :content
    %br
    = f.text_area :content

  .actions
    = f.submit
