- @quotes.each do |quote|
  .item
    .quote-text.column
      = quote.text
    .actions.column
      = link_to "Сохранить себе", "#"
      = link_to "Поделиться", "#"
      = link_to "Пожаловаться", "#"
    .signature
      - quote.tags.each do |tag|
        = link_to tag.keyword, tag
  .clearfix      
